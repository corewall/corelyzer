            "vmArgs": "-Djava.library.path=/Users/lcdev/proj/corewall/corelyzer/app/deps/mac",
            "cwd": "${workspaceFolder}/working_dir"
        },
        {
            "type": "java",
            "name": "Debug TabularToXMLConversion",
            "request": "launch",
            "mainClass": "corelyzer.data.TabularToXMLConversion",
            "args": "/Users/lcdev/proj/corewall/corelyzer/app/testdata/", // path to testdata dir
            "vmArgs": "-Djava.library.path=/Users/lcdev/proj/corewall/corelyzer/app/deps/mac",
            "cwd": "${workspaceFolder}/working_dir"
        },
        {
            "type": "java",
            "name": "Debug (Launch) - Current File",
            "request": "launch",
            "mainClass": "${file}",
            "vmArgs": "-Djava.library.path=/Users/lcdev/proj/corewall/corelyzer/app/deps/mac",
            "cwd": "${workspaceFolder}/working_dir"
